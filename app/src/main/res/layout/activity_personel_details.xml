    <android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activite.UpdateProfileActivity">

        <LinearLayout
            style="@style/LightBackgroundLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:titleTextColor="@color/white"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

            <ScrollView
                android:id="@+id/scrollviewrightleft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/scrolllayout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/layoutlogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layouttext"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="221dp">

                            <ImageView
                                android:id="@+id/coverphoto"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/cover" />

                            <ImageView
                                android:id="@+id/editcoverphoto"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="fitXY"
                                android:layout_gravity="right"
                                android:layout_margin="10dp"
                                android:src="@drawable/photo" />

                            <RelativeLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/ivProfile"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/dummy_user_profile"
                                    app:civ_border_color="@color/white"
                                    app:civ_border_width="3dp" />

                                <ImageView
                                    android:id="@+id/iv_cancel_profile"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentEnd="true"
                                    android:contentDescription="@string/app_name"
                                    android:padding="15dp"
                                    android:src="@drawable/cancel_gray_icon"
                                    android:visibility="gone" />

                            </RelativeLayout>

                        </FrameLayout>

                        <LinearLayout
                            android:id="@+id/ll_name_layout"
                            style="@style/InputBackgroundLayout"
                            android:layout_marginTop="30dp">

                            <ImageView
                                style="@style/InputIcon"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/textbox" />

                            <EditText
                                android:id="@+id/edittextname"
                                style="@style/InputEditText"
                                android:hint="Name"
                                android:inputType="text"
                                android:maxLength="30" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_mobile_number"
                            style="@style/InputBackgroundLayout"
                            android:layout_marginTop="30dp">

                            <ImageView
                                style="@style/InputIcon"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/cellphone_android" />

                            <EditText
                                android:id="@+id/edittextmobile"
                                style="@style/InputEditText"
                                android:hint="Mobile Number"
                                android:inputType="number"
                                android:maxLength="10" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_address_layout"
                            style="@style/InputBackgroundLayout"
                            android:layout_marginTop="30dp">

                            <ImageView
                                style="@style/InputIcon"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/map_marker" />

                            <EditText
                                android:id="@+id/edittextaddress"
                                style="@style/InputEditText"
                                android:hint="Address"
                                android:inputType="text"
                                android:maxLength="150" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_email_layout"
                            style="@style/InputBackgroundLayout"
                            android:layout_marginTop="30dp">

                            <ImageView
                                style="@style/InputIcon"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/email" />

                            <EditText
                                android:id="@+id/edittextemailid"
                                style="@style/InputEditText"
                                android:enabled="false"
                                android:hint="Email Id"
                                android:inputType="textEmailAddress"
                                android:maxLength="100" />
                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/radiogender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edittextemailid"
                            android:layout_marginTop="20sp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:text="Gender">

                            <RadioButton
                                android:id="@+id/radiomale"
                                style="@style/FormLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/icon_green"
                                android:checked="true"
                                android:text="Male"
                                android:textSize="16sp"
                                android:textStyle="normal|bold" />

                            <RadioButton
